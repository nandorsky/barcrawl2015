<!-- Page Title
    ============================================= -->
    <section id="page-title">

      <div class="container clearfix">
        <h1>Register</h1>
      </div>

    </section><!-- #page-title end -->

<!-- Content
    ============================================= -->
    <section id="content">

      <div class="content-wrap">

        <div class="container clearfix">

          <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width: 550px;">

            <div class="acctitle"><i class="acc-closed icon-facebook"></i><i class="acc-open icon-facebook"></i>Register via Facebook</div>
            <div class="acc_content clearfix">

              <div class="panel panel-default nobottommargin">
                                  <div class="panel-body" style="padding: 40px;">
               

                                  <div class="center">
                                    <h4 style="margin-bottom: 15px;">Register using Facebook and you can leave comments on the homepage. Don't worry, we won't post anything your facebook feed.</h4>
                                      <%= link_to "Sign Up Via Facebook", user_omniauth_authorize_path(:facebook), :class => "button button-rounded si-facebook si-colored", data: { disable_with: "Signing In" } %>
                                    </div>

                  </div>
                </div>

            </div>

            <div class="acctitle"><i class="acc-closed icon-email"></i><i class="acc-open icon-ok-sign"></i>Register via Email</div>
            <div class="acc_content clearfix">
                <div class="panel panel-default nobottommargin">
                                  <div class="panel-body" style="padding: 40px;">

                                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class=> 'nobottommargin' }) do |f| %>
                                
                                    <%= devise_error_messages! %>
                                    

                                    <div class="center">
                                      <h4 style="margin-bottom: 15px;">Or you can be be boring and register via email</h4>
                                    </div>

                                    <div class="col_full">
                                        <%= f.label :name %>
                                        <%= f.text_field :name,:class => "form-control", autofocus: true %>
                                        <%= f.hidden_field :mvp, :value => 0 %>
                                    </div>

                                    <div class="col_full">
                                        <%= f.label :email %>
                                        <%= f.email_field :email, :class => "form-control" %>
                                    </div>

                                    <div class="col_full">
                                        <%= f.label :password %>
                                        <% if @validatable %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
                                    </div>
                                       

                                    <div class="col_full">
                                        <%= f.label :password_confirmation %><br />
                                        <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
                                    </div>

                                    <div class="col_full nobottommargin">
                                        <%= f.submit "Next", :class => "button button-3d button-black nomargin",  data: { disable_with: "Loading..." } %>
                                    </div>

                                <% end %>
                                  </div>
                                </div>
            </div>

          </div>

        </div>

      </div>

    </section><!-- #content end -->



<%= render "devise/shared/links" %>
