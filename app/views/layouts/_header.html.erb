    <!-- Header
        ============================================= -->
        <header id="header" class="full-header">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="<%= root_path %>" class="standard-logo" data-dark-logo="images/logo-dark.png">PG TimeMachine</a>
                        <a href="index.html" class="retina-logo" data-dark-logo="images/logo-dark@2x.png">
                          <%= image_tag("logo@2x.png") %>
                        </a>
                    </div><!-- #logo end -->

                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">
                    <% if user_signed_in? %>
                        <ul>
                            <li><%= link_to "Home", root_path %></li>
                            <li><%= link_to "My Account", user_path(current_user) %></li>
                           <li> 
                              <% if !Comment.exists?(:user_id => current_user) %>
                                <%= link_to 'Register', new_comment_path %>
                              <% else %>
                                
                              <% end %>
                            </li>
                            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>                            
                        </ul>
                    <% else %>
                          <ul>
                            <li><%= link_to "Home", root_path %></li>
                            <li><%= link_to "Register", new_user_registration_path %></li>
                            <li><%= link_to "Sign in", new_user_session_path %></li>
                        </ul>
                    <% end %>

                    </nav>
                </div>
             </div>
                           
            </header>


 